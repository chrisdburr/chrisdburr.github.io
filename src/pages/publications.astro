---
import Heading from "@/components/ui/Heading.astro";
import PublicationsList from "@/components/ui/PublicationsList.astro";
// Import publications from JSON file
import publicationsData from "@/data/publications.json";
import Layout from "@/layouts/Layout.astro";

// Get all publications
const allPublications = publicationsData.items.filter(
  (item) => item.inPublications !== false
);
---

<Layout title="Publications">
  <div class="prose max-w-none">
    <Heading level={1}>Publications</Heading>
    <PublicationsList publications={allPublications} />
  </div>
</Layout>