---
import { Image } from 'astro:assets'

import SocialIcons from './SocialIcons.astro'


const {fullName, title, role, institute, profilePicture} = Astro.props // Add role
---
<div class='flex-1'>
  <h1 class='text-4xl font-bold mb-4'>
    Welcome! I'm {title} <span class='text-primary'>{fullName}</span>
  </h1>
  {/* Display role and institute */}
  <p class='text-xl text-gray-600 mb-4'>{role}{institute ? ` at ${institute}` : ''}</p>
  <p class='text-lg mb-6'>
    Exploring the intersection of AI, digital twins, and cognitive science to foster a trustworthy and ethical approach to the design, development, and deployment of data-driven technologies.
  </p>
  <div class='flex gap-4'>
    <SocialIcons />
  </div>
</div>
{profilePicture && (
  <div class='size-72 lg:block hidden'>
    {/* <!-- Add your profile image --> */}
    <Image
      src={profilePicture}
      alt={fullName}
      class='w-full h-full mask mask-circle size-44'
    />
  </div>
)}
