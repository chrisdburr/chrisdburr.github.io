---
import type { Award } from '../../types/cv';

interface Props {
  award: Award;
  colored?: boolean;
}

const { award, colored = false } = Astro.props;
---

<div class="mb-8">
  <div class="flex justify-between items-start mb-2">
    <div>
      <h3 class="text-lg font-semibold">{award.title}</h3>
      <p class="text-sm opacity-75">{award.organization}, {award.location}</p>
    </div>
    <div class="text-right">
      <span class={`inline-block px-3 py-1 text-sm rounded-md ${colored ? 'bg-primary/30 text-primary font-medium' : 'bg-base-200 text-base-content'}`}>
        {award.value}
      </span>
      <p class="text-sm opacity-75">{award.time}</p>
    </div>
  </div>
  <p class="text-base">{award.description}</p>
</div>