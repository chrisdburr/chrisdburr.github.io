---
import type { Award } from "../../types/cv";
import Icon from "./Icon.astro";

interface Props {
  award: Award;
  colored?: boolean;
}

const { award, colored = false } = Astro.props;
---

<div class="flex mb-6">
  <div class="border-l-4 border-primary mr-4"></div>
  <div class="flex-1">
    <h3 class="text-xl font-semibold mb-1 -mt-1">{award.title}</h3>
    <div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-3 mb-2 text-base-content/80">
      <div class="font-medium">{award.organization}</div>
      <div class="hidden sm:block text-xs">•</div>
      <div class="inline-flex items-center gap-1 text-sm">
        <Icon name="pin" className="w-3 h-3 stroke-current" />
        <span>{award.location}</span>
      </div>
      <div class="hidden sm:block text-xs">•</div>
      <div class="text-sm">{award.time}</div>
      <div class="hidden sm:block text-xs">•</div>
      <div class={`text-sm font-medium ${colored ? 'text-primary' : ''}`}>
        {award.value}
      </div>
    </div>
    <p class="text-base-content/80">{award.description}</p>
  </div>
</div>