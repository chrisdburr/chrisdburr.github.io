---
interface Props {
  listTitle: string;
  listItems: {
    title: string;
    description: string;
    link?: string;
  }[];
}
const { listTitle, listItems } = Astro.props;
---
<h2 class="text-2xl font-bold mb-6">{listTitle}</h2>
<div class="grid gap-4 mb-12">
  {
    listItems.map((item) => (
      <div class="flex">
        <div class="border-l-4 border-primary mr-4 h-full"></div>
        <div class="flex-1">
          <h3 class="text-xl font-semibold mb-1 -mt-1">
            {item.link ? (
              <a href={item.link} class="link link-hover">{item.title}</a>
            ) : (
              item.title
            )}
          </h3>
          <p class="text-base-content/80">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
