---
import type { ProfessionalService } from '../../types/cv';
import Icon from './Icon.astro';

interface Props {
  service: ProfessionalService;
  colored?: boolean;
}

const { service, colored = false } = Astro.props;
---

<div class="flex mb-6">
  <div class="border-l-4 border-primary mr-4"></div>
  <div class="flex-1">
    <h3 class="text-xl font-semibold mb-1 -mt-1">{service.title}</h3>
    <div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-3 mb-2 text-base-content/80">
      <div class="font-medium">{service.organization}</div>
      <div class="hidden sm:block text-xs">•</div>
      <div class="text-sm">{service.time}</div>
      <div class="hidden sm:block text-xs">•</div>
      <div class={`text-sm font-medium ${colored ? 'text-primary' : ''}`}>
        {service.role}
      </div>
    </div>
    {service.description && <p class="text-base-content/80">{service.description}</p>}
  </div>
</div>